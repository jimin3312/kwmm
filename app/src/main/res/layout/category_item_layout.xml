<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/txt_category_restaurant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:text="스폰지밥"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.3"

        />

    <ImageView
        android:id="@+id/img_category_star"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/txt_category_restaurant_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/txt_category_rate"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="4.7"
        android:textSize="13dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_category_restaurant_title"
        app:layout_constraintLeft_toRightOf="@+id/img_category_star"
        />

    <TextView
        android:id="@+id/txt_category_total"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:gravity="center"
        android:textSize="13dp"
        android:text="총 리뷰 : "
        android:paddingLeft="9dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_category_rate"
        app:layout_constraintTop_toTopOf="@id/txt_category_rate"/>

    <TextView
        android:id="@+id/txt_category_total_review"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:gravity="center"
        android:textSize="13dp"
        android:text="119"
        app:layout_constraintLeft_toRightOf="@+id/txt_category_total"
        app:layout_constraintTop_toTopOf="@id/txt_category_rate"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
