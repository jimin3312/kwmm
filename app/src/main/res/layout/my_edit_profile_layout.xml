<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_my_edit_profile"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/img_my_edit_profileImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:src="@drawable/ic_person_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth_percent="0.25" />

    <EditText
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.4"
        android:hint="닉네임변경"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/etxt_my_edit_nickname"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임변경"
        android:id="@+id/my_edit_txt_nickname_check"
        app:layout_constraintTop_toBottomOf="@id/etxt_my_edit_nickname"
        app:layout_constraintLeft_toLeftOf="@+id/etxt_my_edit_nickname"
        android:visibility="gone"
        />
    <Button
        app:layout_constraintLeft_toRightOf="@+id/etxt_my_edit_nickname"
        app:layout_constraintBottom_toBottomOf="@+id/etxt_my_edit_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_my_edit_nickname"
        android:onClick="onClick"
        android:text="변경"
        />
    <EditText
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.4"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="비밀번호변경"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/etxt_my_edit_password"
        />
    <Button
        app:layout_constraintLeft_toRightOf="@+id/etxt_my_edit_password"
        app:layout_constraintBottom_toBottomOf="@+id/etxt_my_edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_my_edit_password"
        android:text="변경"
        android:onClick="onClick"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임변경"
        android:id="@+id/my_edit_txt_pw_check"
        app:layout_constraintTop_toBottomOf="@id/etxt_my_edit_password"
        app:layout_constraintLeft_toLeftOf="@+id/etxt_my_edit_password"
        android:visibility="gone"
        />
    <TextView
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintVertical_bias="0.95"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:onClick="onClick"
        android:id="@+id/txt_withdrawal_myAccount"
        />
</android.support.constraint.ConstraintLayout>